<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CreateNote">

    <TextView
        android:id="@+id/textTitleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_create_note"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/labelNoteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_note_title"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textTitleHeader"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/hint_note_title"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@id/labelNoteTitle" />

    <TextView
        android:id="@+id/labelNoteContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_note_content"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/editNoteTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editNoteContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="top"
        android:hint="@string/hint_note_content"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@id/labelNoteContent"
        app:layout_constraintBottom_toTopOf="@id/btnCreate" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/button_create"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2E7D5C"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>